@model IEnumerable<IngredientDB.Ingredient>


@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<h1>
    @Html.ActionLink("Voeg nieuw toe", "Create")
</h1>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.name)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.merk)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.ingredientID)
        </th>
    </tr>


@foreach (IngredientDB.Ingredient item in Model)    {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.name)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.merk)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.ingredientID)
    </td>
    <td>
        @Html.ActionLink("Details", "Details", new { id = item.ingredientID })
    </td>
    <td>
        @Html.ActionLink("Edit", "Edit", new { id = item.ingredientID })
    </td>
    <td>
        @Html.ActionLink("Delete", "Delete", new { id = item.ingredientID })
    </td>
</tr>
        
    }

</table>

